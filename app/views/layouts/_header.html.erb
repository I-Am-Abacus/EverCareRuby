<header>
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">     <!--modified from http://www.bootply.com/98314#-->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="navbar-text navbar-left <%= MOBILE_ONLY %>"><%= yield(:navbar_h1) %></div>
    <div class="navbar-text navbar-left <%= TABLET_ONLY %>"><%= yield(:navbar_h1) %></div>
    <%= link_to 'Emily\'s Edibles', root_path, class: 'navbar-brand' + DESKTOP %>
    <div class="collapse navbar-collapse navHeaderCollapse">
      <ul class="nav navbar-nav navbar-right">
        <li class="active"><%= link_to 'Home', root_path, class: MOBILE_TABLET %></li>
        <% if signed_in? %>
          <!--<li ><#%= link_to 'Profile', current_user %></li>-->
          <li ><%= link_to 'Settings', edit_user_path(current_user) %></li>
          <li > <%= link_to 'Sign out', signout_path, method: 'delete' %> </li>
        <% else %>
          <% if request.path == signin_path %>
            <li ><%= link_to 'Signing in', signin_path %></li>
          <% else %>
            <li ><%= link_to 'Sign in', signin_path %></li>
          <% end %>

        <% end %>
      </ul>
    </div>
  </div>
</header>
